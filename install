#!/bin/bash

if [ "$(id -u)" -ne 0 ]; then
	echo 'Run this script as root'
	echo 'Pass "remove" arg to uninstall'
	exit 1
fi

install_files() {
	install -vDm 644 tty-colorscheme/colorschemes/*/* -t /etc/tty-colorscheme/colorschemes
	install -vm 755 tty-colorscheme/tty-colorscheme -t /usr/bin
	install -vm 644 tty-colorscheme/tty-colorscheme.1.gz -t /usr/share/man/man1
	install -vm 644 tty-colorscheme/tty-colorscheme.conf -t /etc/tty-colorscheme
	install -vm 644 tty-colorscheme/tty-colorscheme.service -t /usr/lib/systemd/system

	echo -en '\nRun "systemctl enable tty-colorscheme" to apply colors at boot'
	echo -en '\nColorscheme can be set in /etc/tty-colorscheme/tty-colorscheme.conf\n\n'
}

remove_files() {
	rm -vrf /etc/tty-colorscheme
	rm -vf /usr/bin/tty-colorscheme
	rm -vf /usr/share/man/man1/tty-colorscheme.1.gz
	rm -vf /usr/lib/systemd/system/tty-colorscheme.service
}

case $1 in
	remove) remove_files ;;
	"") install_files ;;
esac
